<div class="row">
	<div class="col-xs-12">
		<h2 class="white">New Customer</h2>
		<hr> 
	</div>
	<div class="col-xs-6">
		<%= form_for @customer, class: 'hortizontal-form' do |c| %>
			
			<div class="form-group">
				<label class="white">First Name: </label><br/>
				<%= c.text_field :fname, class: 'form-control' %>
			</div>
			<div class="form-group">
				<label for="lname" class="white">Last Name:</label><br/>
				<%= c.text_field :lname, class: 'form-control' %>
			</div>
			<div class="form-group">
				<label for="email" class="white">Email: </label><br/>
				<%= c.text_field :email, class: 'form-control' %>
			</div>
			<div class="form-group">
				<label for="telephone" class="white">Telephone: </label><br/>
				<%= c.text_field :telephone, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= c.submit class: 'button' %>
			</div>
		<% end %> 
		<br />
		<%= link_to "Home", root_path, class: 'white' %> 
	</div>
</div>