 <div class="row"> 
  <div class="col-xs-10 col-xs-push-1 col-md-6 col-md-push-3 devise">
    <h1 class="text-center white large_logo">Video<span class="thin">Trak</span></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "white" %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        <br />
      </div>
      <div class="field">
        <%= f.label :password, class: "white" %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
        <br />
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "white" %>
        </div>
      <% end -%>

      <div class="actions">
      <br />
        <%= f.submit "Log in", class: 'button' %>
        <br />
        <br />
      </div>
    <% end %>
    <%= render "users/shared/links" %>
    <br />
    <br />
    <br />
  </div>
</div>
